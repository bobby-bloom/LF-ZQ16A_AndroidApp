<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonationFragment"
>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="116dp"
    >
        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@raw/donation_cat_begging"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
        />

    </RelativeLayout>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_donation"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="100dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:text="@string/submit_donate_btn"
            android:textSize="29sp"
            android:textColor="#001c64"
            app:icon="@drawable/ic_paypal_logo"
            app:iconSize="50dp"
            app:iconTintMode="multiply"
            app:iconTint="@color/cardview_light_background"
            app:cornerRadius="20dp"
            tools:ignore="MissingConstraints"
            android:shadowColor="#0070e0"
            android:shadowDx="2"
            android:shadowDy="1"
            android:shadowRadius="6"
        />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>



